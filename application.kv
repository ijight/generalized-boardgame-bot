#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import CoreImage kivy.core.image.Image
#:import Main main

<ToolsScreenManager>:
    ChessToolsView:
        name: "chess"

<ChessToolsView>:
    GridLayout:
        rows: 3
        cols: 1
        Button:
            text: 'Save Initial Chessboard'
            on_press:
                app.initialize_chess_images_cache()
        Label:
            text:'temp'
        Label:
            text:'temp'

<SplitBoardImagesView>:
    GridLayout:
        size: root.size
        rows: 1
        cols: 1
        on_parent: root.store()
        id: imageGrid
        
<PrimaryScreen>:
    GridLayout:
        cols: 3
        SplitBoardImagesView:
        ToolsScreenManager:
            id: toolScreenManager
        Image:
            id: boardImage

<SettingsScreen>:
    GridLayout:
        cols: 2
        Button:
            text:'fuck'

<ToolBar>:
    rows: 1
    cols: 4
    size_hint_y: None
    size_hint_x: 0.3
    height: 30
    Button:
        text: "Settings"
        on_press:
            #self.parent.parent.children[0].transition.direction = 'right'
            app.root.ids.rootScreenManager.transition = NoTransition()
            app.root.ids.rootScreenManager.current = "settings"
    Button:
        text: "Board"
        on_press:
            #self.parent.parent.children[0].transition.direction = 'left'
            app.root.ids.rootScreenManager.transition = NoTransition()
            app.root.ids.rootScreenManager.current = "board"
    Button: 
        text: "Get Coords"
        on_release: app.start_listener()

BoxLayout:
    orientation:'vertical'
    ToolBar:
    ScreenManager:
        id: rootScreenManager
        PrimaryScreen:
            name: "board"
        SettingsScreen:
            name: "settings"
